{{#if editUser}}
  {{to-elsewhere named="modal" send=(hash title="Account"
                                          body=(component "user-edit-form" changeset=changeset onSubmit=(route-action "saveUser" changeset) onCancel=(route-action "cancelUser" changeset) onLogout=(route-action "logout"))
                                          onOutsideClick=(route-action "cancelUser" changeset)
                                    )
  }}
{{/if}}

{{#burger-menu
  open=showMenu
  animation="push"
  width=300
  translucentOverlay=false
  dismissOnClick=false
  as |burger|}}

  {{#burger.menu}}
    {{app-sidebar onClose=(action burger.state.actions.toggle)}}
  {{/burger.menu}}

  {{#burger.outlet}}
    {{#app-content onToggle=(action burger.state.actions.toggle)}}
      {{outlet}}
    {{/app-content}}
  {{/burger.outlet}}

{{/burger-menu}}

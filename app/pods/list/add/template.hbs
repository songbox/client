{{#item-list as |list|}}
  {{list.header "Add Songs"}}

  {{#list.filter items=model.songs attr="title" as |filtered|}}

    {{#list.items (sort-by 'title' filtered) as |item song|}}
      {{#item.elem click=(route-action "addSong" model.list song) as |elem|}}
        {{elem.title song.title}}
        {{elem.details song.author}}
      {{/item.elem}}
    {{/list.items}}

  {{/list.filter}}
{{/item-list}}


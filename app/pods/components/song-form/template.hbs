{{#form-for changeset submit=onSave as |f|}}
  {{f.text-field "title"}}
  {{f.text-field "author"}}

  {{f.text-field "key"}}
  {{f.text-field "tempo"}}
  {{f.text-field "time"}}

  {{f.text-field "license"}}
  {{f.text-field "ccli"}}

  {{f.textarea-field "text"}}

  {{f.submit "Save" disabled=(or changeset.isPristine changeset.isInvalid)}}
{{/form-for}}

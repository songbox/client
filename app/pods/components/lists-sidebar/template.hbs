{{#item-list as |list|}}
  {{list.header "Lists"}}

  {{#list.actions as |link|}}
    {{#unless editMode}}
      {{#link.edit (query-params editMode=true)}}
        {{t "lists.link-edit"}}
      {{/link.edit}}
    {{else}}
      {{#link.edit (query-params editMode=false)}}
        Done
      {{/link.edit}}
    {{/unless}}
    {{#link.new "lists.new"}}
      {{t "lists.link-new"}}
    {{/link.new}}
  {{/list.actions}}

  {{#list.items (sort-by 'name' lists) as |item list|}}
    {{#item.link 'list' list as |link|}}
      {{#link.text as |text|}}
        {{text.title list.name}}
        {{text.details (t 'song' count=list.listItems.length)}}
      {{/link.text}}
      {{#if editMode}}
        {{link.button-remove click=(action "removeList" list)}}
      {{/if}}
    {{/item.link}}
  {{/list.items}}

{{/item-list}}

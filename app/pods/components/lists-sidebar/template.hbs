{{#item-list as |list|}}
  {{list.header "Lists"}}

  {{#list.actions}}
    {{#link-to "lists.new"}}
      {{svg-icon "ic_add_box_24px"}}
      {{t "lists.link-new"}}
    {{/link-to}}
  {{/list.actions}}

  {{#list.items (sort-by 'name' lists) as |item list|}}
    {{#item.link 'list' list as |link|}}
      {{link.title list.name}}
      {{link.details list.listItems.length}}
    {{/item.link}}
  {{/list.items}}

{{/item-list}}

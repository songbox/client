{{#item-list as |list|}}
  {{list.header "Lists"}}

  {{#list.actions as |link|}}
    {{#link.new "lists.new"}}
      {{t "lists.link-new"}}
    {{/link.new}}
  {{/list.actions}}

  {{#list.items (sort-by 'name' lists) as |item list|}}
    {{#item.link 'list' list as |link|}}
      {{#link.text as |text|}}
        {{text.title list.name}}
        {{text.details (t 'song' count=list.listItems.length)}}
      {{/link.text}}
    {{/item.link}}
  {{/list.items}}

{{/item-list}}

{{#item-list as |list|}}
  {{list.header "Songs"}}

  {{#list.filter items=songs attr="title" as |filtered|}}

    {{#list.actions as |links|}}
      {{#unless editMode}}
        {{#links.edit (query-params editMode=true)}}
          {{t "songs.link-edit"}}
        {{/links.edit}}
      {{else}}
        {{#links.edit (query-params editMode=false)}}
          Done
        {{/links.edit}}
      {{/unless}}
      {{#links.add "songs.new"}}
        {{t "songs.link-new"}}
      {{/links.add}}
      {{#link-to "songs.import"}}
        {{svg-icon "ic_file_upload_24px"}}
        {{t "songs.link-import"}}
      {{/link-to}}
    {{/list.actions}}

    {{#list.items (sort-by 'title' filtered) as |item song|}}
      {{#item.link 'song' song as |link|}}
        {{#link.text as |text|}}
          {{text.title song.title}}
          {{text.details song.author}}
        {{/link.text}}
        {{#if editMode}}
          {{link.button-remove click=(action "removeSong" song)}}
        {{/if}}
      {{/item.link}}
    {{/list.items}}

  {{/list.filter}}
{{/item-list}}

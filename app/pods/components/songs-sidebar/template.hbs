
<h1>Songs</h1>

<div class="actions">
  {{#link-to "songs.new"}}
    {{svg-icon "ic_add_box_24px"}}
    {{t "songs.link-new"}}
  {{/link-to}}
  {{#link-to "songs.import"}}
    {{svg-icon "ic_file_upload_24px"}}
    {{t "songs.link-import"}}
  {{/link-to}}
</div>

<div class="search">
  {{input placeholder="Search by title..." value=searchTerm}}
  <button {{action "clearSearch"}}>Clear</button>
</div>

<ul>
  {{#each (sort-by "title" filteredSongs) as |song|}}
    {{#link-to 'song' song.id tagName='li' class="item"}}
      <div class="item__name">
        {{song.title}}
      </div>

      <div class="item__details">
        {{song.author}}
      </div>
    {{/link-to}}
  {{/each}}
</ul>


<h1>Songs</h1>

<div class="actions">
  {{#link-to "songs.new"}}
    {{svg-icon "ic_add_box_24px"}}
    {{t "songs.link-new"}}
  {{/link-to}}
  {{#link-to "songs.import"}}
    {{svg-icon "ic_file_upload_24px"}}
    {{t "songs.link-import"}}
  {{/link-to}}
</div>

<div class="search">
  {{input placeholder="Search..." value=searchTerm}}
</div>

<ul>
  {{#each (sort-by "title" filteredSongs) as |song|}}
    <li>
      {{#link-to 'song' song.id}}
        {{song.title}}
      {{/link-to}}
    </li>
  {{/each}}
</ul>

{{#item-list as |list|}}
  {{list.header "Songs"}}

  {{#list.filter items=songs attr="title" as |filtered|}}

    {{#list.actions as |links|}}
      {{#links.add "songs.new"}}
        {{t "songs.link-new"}}
      {{/links.add}}
      {{#link-to "songs.import"}}
        {{svg-icon "ic_file_upload_24px"}}
        {{t "songs.link-import"}}
      {{/link-to}}
    {{/list.actions}}

    {{#list.items (sort-by 'title' filtered) as |item song|}}
      {{#item.link 'song' song as |link|}}
        {{link.title song.title}}
        {{link.details song.author}}
      {{/item.link}}
    {{/list.items}}

  {{/list.filter}}
{{/item-list}}

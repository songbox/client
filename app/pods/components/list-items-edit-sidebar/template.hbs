{{#item-list as |l|}}
  {{l.header "Edit Songs"}}

  {{#l.actions as |link|}}
    {{#link.edit "list" list}}
      Done
    {{/link.edit}}

    {{#link.add "list.add" list}}
      Add
    {{/link.add}}
  {{/l.actions}}

  {{#sortable-group onChange="reorderItems" as |group|}}

    {{#l.items (sort-by 'rank' list.listItems) group=group as |item model|}}
      {{item.handle}}
      {{#item.text as |text|}}
        {{text.title model.song.title}}
        {{text.details model.song.author}}
      {{/item.text}}
      {{item.button-remove click=(action "selectItem" model)}}
    {{/l.items}}

  {{/sortable-group}}
{{/item-list}}

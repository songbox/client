{{#item-list as |l|}}
  {{l.header (concat "List: " list.name)}}

  {{#l.actions as |link|}}
    {{#link.edit "list.edit" list}}
      Edit
    {{/link.edit}}
    {{#link.add "list.add" list}}
      Add
    {{/link.add}}
  {{/l.actions}}

  {{#l.items (sort-by 'rank' list.listItems) as |item model index|}}
    {{#item.text click=(action "selectItem" model index) as |text|}}
      {{text.title model.song.title}}
      {{text.details model.song.author}}
    {{/item.text}}
  {{/l.items}}

{{/item-list}}

{{#item-list as |l|}}
  {{l.header (concat "List: " list.name)}}

  {{#l.actions as |link|}}
    {{#link.edit "list.edit" list}}
      Edit
    {{/link.edit}}
    {{#link.add "list.add" list}}
      Add
    {{/link.add}}
  {{/l.actions}}

  {{#sortable-group onChange="reorderItems" as |group|}}

    {{#l.items (sort-by 'rank' list.listItems) as |i item index|}}
      {{#i.sortable-link 'list.item' list (add index 1) group=group as |link|}}
        {{#link.text as |text|}}
          {{text.title item.song.title}}
          {{text.details item.song.author}}
        {{/link.text}}
        {{link.handle}}
      {{/i.sortable-link}}
    {{/l.items}}

  {{/sortable-group}}

{{/item-list}}

{{#item-list as |l|}}
  {{l.header (concat "List: " list.name)}}

  {{#l.actions}}
    {{#link-to "list.add" list}}
      {{svg-icon "ic_add_box_24px"}}
      Add
    {{/link-to}}
  {{/l.actions}}

  {{#sortable-group onChange="reorderItems" as |group|}}

    {{#l.items (sort-by 'rank' list.listItems) as |i item index|}}
      {{#i.sortable-link 'list.item' item (add index 1) group=group as |link|}}
        {{link.title item.song.title}}
        {{link.details item.song.author}}
      {{/i.sortable-link}}
    {{/l.items}}

  {{/sortable-group}}

{{/item-list}}

{{! template-lint-disable unused-block-params }}
<div class="song-sections {{if showMultiColumn 'multi-column'}}">
  {{#each sections as |section|}}
    <div class="song-section">
      {{!-- Header --}}
      {{#if (and showSectionHeaders section.header)}}
        <h2 class="song-section-header">{{song-section-header section.header}}</h2>
      {{/if}}

      {{#each section.lines as |line|}}
        {{!-- Chords and Lyrics --}}
        {{#if (or line.lyrics line.chords)}}
          <table>
            <tbody>
              {{#if showChords}}
                <tr class="chords">
                  {{#each line.chords as |chord|}}
                    <td>{{chord}}</td>
                  {{/each}}
                </tr>
              {{/if}}
              {{#each line.lyrics as |lyrics|}}
                <tr class='lyrics'>
                  {{#each lyrics as |l|}}
                    <td>{{l}}</td>
                  {{/each}}
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{/if}}

        {{!-- Comments --}}
        {{#if line.comments}}
          <div class="comments">
            {{line.comments}}
          </div>
        {{/if}}
      {{/each}}
    </div>
  {{/each}}
</div>
